<article class="snippet">
  <h3 class="snippet__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <p class="snippet__body">{{ post.data.description }}</p>
  <div class="snippet__image">
    <img src="{{ post.data.image }}" class="d-block w-100" alt="{{ post.data.imageAlt }}">
  </div>

  <audio controls>
    <source src="{{ post.data.audio }}" type="audio/mpeg">
  </audio>
</article>
